/* 主窗口样式 */
QMainWindow {
    background-color: #2E3440; /* 深色背景 */
    color: #D8DEE9; /* 浅色文字 */
    font-family: "Segoe UI", sans-serif;
}

QTextEdit#chat_history {
background-color: #C0C0D0;
}

QTextEdit {
background-color: #C0C0D0;
}

/* 标签文字颜色 */
QLabel {
    color: #000000;
}
QGroupBox::title {
    color: #ffffff;
    font-family: "Microsoft YaHei";
    font-size: 12px;
    padding: 5px 0;
}
